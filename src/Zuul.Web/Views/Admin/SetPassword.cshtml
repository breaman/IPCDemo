@model SetPasswordViewModel

<div>
    <p>Set password for @Model.FirstName @Model.LastName</p>
    <partial name="_ValidationSummary" />

    <div class="row">
        <form asp-action="SetPassword" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input class="form-control" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-controller="Admin" asp-action="Users" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>