@model UserAdminViewModel
<p>Here is where you can view/edit/delete/confirm users</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Email Confirmed</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.EmailConfirmed</td>
            <td>@String.Join(",", user.Roles)</td>
            <td>
                <ul>
                    <li class="@(user.EmailConfirmed?"d-none":null)"><a asp-controller="Admin" asp-action="EnableUser" asp-route-userId="@user.Id" class="btn btn-primary">Enable</a></li>
                    <li><a asp-controller="Admin" asp-action="EditUser" asp-route-userId="@user.Id" class="btn btn-primary">Edit</a></li>
                    <li><a asp-controller="Admin" asp-action="SetPassword" asp-route-userId="@user.Id" class="btn btn-primary">Set Password</a></li>
                </ul>
            </td>
        </tr>
        }
    </tbody>
</table>